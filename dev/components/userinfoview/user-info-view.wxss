.header {
  width: 100%;
  height: 168rpx;
  padding: 32rpx, 0, 32rpx, 32rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
}

.header .user-info {
  width: 35%;
  height: 100%;
  background: #f2f3ff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.header .user-info .avator {
  width: 84rpx;
  height: 84rpx;
  /*margin-top: auto;
  margin-bottom: auto;*/
  margin-bottom: 10rpx;
  border-radius: 50%;
}

.header .user-info .nickname {
  color: #000;
  font-size: 28rpx;
  /*margin-top: auto;
  margin-bottom: auto;*/
  margin-left: 25rpx;
  margin-right: 32rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: block;
}

.header .coin-part {
  width: 45%;
  background: #0278ff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.pk-num-container {
  align-self: center;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user-info-pk-icon {
  width: 46rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.coin-part .pk {
  font-size: 24rpx;
  color: #FFFFFF;
}

.coin-part .pk-num {
  font-size: 72rpx;
  color: #FFFFFF;
}

.header .common-question-layout {
  width: 20%;
  height: 168rpx;
  margin-bottom: 26rpx;
  display: flex;
  flex-direction: row;
  /*border-left: 1px solid #e0e0e0;*/
  background:rgba(0,53,114,1);
}

.header .common-question-layout .common-question {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.header .common-question-layout .common-question .icon {
  width: 80rpx;
  height: 65rpx;
  margin-top: 35rpx;
  margin-left: auto;
  margin-right: auto;
}

.header .common-question-layout .common-question .text {
  color: #414f63;
  font-size: 24rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 18rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:34rpx;
}