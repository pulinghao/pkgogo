/* component/pk-result-card/pk-result-card-view.wxss */
.pk-result-card-view {
  background-color: #2b2c3a;
  border-radius: 8rpx;
  padding: 22rpx 30rpx 0rpx 24rpx;
  margin-top: 24rpx;
  margin-left: 26rpx;
  margin-right: 24rpx;
}

.item-title {
  font-size: 32rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(255,255,255,1);
  line-height:24px;
}

.answer {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.item-tail {
  height: 80rpx;
  display: flex;
  flex-direction: row;
  /*align-items: center;*/
  justify-content: space-between;
}

.time {
  font-size: 24rpx;
  color: #9f9f9f;
}

.answer-layout {
  display: flex;
  flex-direction: row;
}

.icon {
  width: 26rpx;
  height: 26rpx;
  margin-top: auto;
  margin-bottom: auto;
}

.number {
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #9f9f9f;
  margin-top: auto;
  margin-bottom: auto;
}

 .award-part {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
/*  width:50%;*/
}

.award-title {
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:300;
  color:rgba(255,255,255,1);
  line-height:20rpx;
}
.answer-icon
{
  width: 76rpx;
  height: 76rpx;
}
.award-num {
  font-size: 13px;
  font-family: SourceSansPro-Semibold;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 10px;
  margin-left: 8rpx;
}

.award-icon {
  width: 28rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.people-part {
  /*width: 50%;*/
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-left: 8rpx;
}
.people-icon {
  width: 38rpx;
  height: 38rpx;
  margin-right: 10rpx;
}


.people-title {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 20rpx;
  margin-left: 15rpx;
  font-weight: 300;
}

.people-num {
  font-size: 26rpx;
  font-family: SourceSansPro-Semibold;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 20rpx;
}
