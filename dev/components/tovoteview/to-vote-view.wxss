.to-vote-vs-icon {
    width: 96rpx;
    height: 96rpx;
    position: absolute;
    left: 43.5%;
}

.vote-vs-icon {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    left: 47%;
}


.to-vote-left-part {
    width: 50%;
    height: 64rpx;
    background: #4a93ff;
    border-top-left-radius: 15rpx;
    border-bottom-left-radius: 15rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-left: 0rpx;
}

.to-vote-right-part {
    width: 50%;
    height: 64rpx;
    background: #FF3363;
    border-top-right-radius: 15rpx;
    border-bottom-right-radius: 15rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-right: 0rpx;
}

.to-vote-view {
    width: 100%;
    height: 88rpx;
    display: flex;
    flex-direction: row;
    justify-content: start;
    align-items: center;
    margin-top: 18rpx;
}

.to-vote-text {
    color: #ffffff;
    font-size: 24rpx;
}