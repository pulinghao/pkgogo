    justify-content: center;
}
.c_tabbar .join_tabbar_item .join_tabbar_item_img {
    width: 54rpx;
    height: 54rpx;
}

.c_tabbar .join_tabbar_item .join_tabbar_item_title{
    font-size: 30rpx;
    color: #323320;
}

/* big icon */
.c_tabbar .join_tabbar_item_img.big {
    width: 38rpx;
