/* pages/comment/comment.wxss */
page {
    background: rgba(43, 44, 58, 1);
}

.title {
    width: 100%;
    font-size: 18px;
    font-family: PingFangSC-Semibold;
    font-weight: 600;
    color: rgba(255, 255, 255, 1);
    margin-left: 34rpx;
    margin-right: 34rpx;
    margin-top: 38rpx;
}
.title-text{
    font-size:36rpx;
    font-family:PingFangSC-Semibold;
    font-weight:600;
    color:rgba(255,255,255,1);
}
.title-text-count{
    font-size:36rpx;
    font-family:PingFangSC-Semibold;
    font-weight:600;
    color:#FF003C;
    margin-left: 10rpx;
    margin-top: 10rpx;
}

.textarea {
    height: 403rpx;
    margin-left: 34rpx;
    margin-right: 34rpx;
    margin-top: 24rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 4rpx;
    border: 2rpx solid rgba(232, 232, 232, 1);
    padding: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.row-textarea {
    width: 100%;
    height: 100%;
    font-size: 26rpx;
}

.comment {
    margin-left: 32rpx;
    margin-right: 32rpx;
    margin-top: 56rpx;
    height: 114rpx;
    background: rgba(255, 0, 60, 1);
    border-radius: 2rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.fasong {
    font-size: 34rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
}

/*
海报生成
*/
.imagePathBox{
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.7);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10;
}
.creating{
    width: 100%;
    height: 95%;
    position: fixed;
    z-index: 10;
    margin-left: 35rpx;
}
.button-container{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    position: fixed;
    bottom: 50rpx;
    left: 5%;
}
.button-save{
    border-radius: 0;
    width:280rpx;
    height:90rpx;
    background:rgba(255,255,255,1);
    text-align: center;
}
.button-save-text{
    font-size:30rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(35,50,35,1);
}
.button-share{
    border-radius: 0;
    width:280rpx;
    height:90rpx;
    background:rgba(255,0,60,1);
    margin-left: 110rpx;
    text-align: center;
}
.button-share-text{
    font-size:30rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(255,255,255,1);
}

/*
上传图片
*/
.weui-uploader{
    width: 100%;
    height: 210rpx;
    display: flex;
    flex-direction: row;
    justify-content: left;
}
.weui-uploader-file{
    width: 140rpx;
    height: 140rpx;
    margin-right: 20rpx;
}
.weui-uploader-img{
    position: absolute;
    width: 140rpx;
    height: 140rpx;
}
.delete-img{
    position: relative;
    z-index: 1;
    width: 30rpx;
    height: 30rpx;
    margin-left: 123rpx;
    margin-bottom: 123rpx;
}
.weui-uploader-button{
    width:140rpx;
    height:140rpx;
    border-radius:4rpx;
    border:2rpx solid rgba(231,231,231,1);
    text-align: center;
}
.button-img{
    width: 140rpx;
    height: 140rpx;
}
