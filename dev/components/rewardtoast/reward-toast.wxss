.reward-toast {
  display: flex;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 999;
}

.toast-container {
  width: 434rpx;
  height: 368rpx;
  background-color: #000000d0;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.remaining-money-icon {
  width: 120rpx;
  height: 120rpx;
  margin-top: 64rpx;
}

.toast-title {
  margin-top: 20rpx;
  color: #FFFFFF;
  font-size: 44rpx;
}

.toast-subtitle {
  margin-top: 20rpx;
  color: #FFFFFF;
  font-size: 36rpx;
}