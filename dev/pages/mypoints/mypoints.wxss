.body{
    background:rgba(241,241,241,1);
}
/*头部*/
.header {
    width: 100%;
    height: 182rpx;
    background-color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.pk-num-container {
    align-self: center;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.user-info-pk-icon {
  width: 46rpx;
  height: 40rpx;
  margin-left: 10rpx;
}
.remaining-points-label {
    font-size:30rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(0,0,0,1);
    line-height:17px;
}
.pk-num {
    color:rgba(0,0,0,1);
    font-weight:600;
    font-size: 52rpx;
}
/*中间时间*/
.time-container{
    margin-left: 30rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(54,54,54,1);
    line-height:34rpx;
}
/*积分详情列表*/
.record-list{
    background-color: white;
}
.record-item{
    display: flex;
    width: 100%;
    height: 120rpx;
    flex-direction: row;
}
.record-count{
    font-size:13px;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(2,120,255,1);
    line-height:18px;
    margin-right: 30rpx;
}
.item-layout {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.time-line {
    width: 100%;
    height: 64rpx;
    font-size: 24rpx;
    color: #363636;
    padding-left: 34rpx;
    padding-right: 34rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: #EFEFEF;
}

.record-content {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    height: 94rpx;
    align-items: center;
    border-bottom: solid 2rpx #EBEBEB;
    background-color: white;
}
.record-content-detail{
    width: 525rpx;
    color: #363636;
    font-size: 24rpx;
    margin-left: 30rpx;
}
.points-detail {
    width: 100rpx;
    font-size: 26rpx;
    margin-right: 34rpx;
}

.points-detail-in {
    color: #0278FF;
}

.points-detail-out {
    color: #20C752;
}

.empty-points-history {
    text-align: center;
    margin-top: 20rpx;
}